<p id="notice"><%= notice %></p>

<h1>Alliances</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Api</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @alliances.each do |alliance| %>
      <tr>
        <td><%= alliance.name %></td>
        <td><%= alliance.api_id %></td>
        <td><%= link_to 'Show', alliance %></td>
        <td><%= link_to 'Destroy', alliance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
